{{ form_start(form) }}
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title">Rezultato redagavimas</h4>
</div>
<div class="modal-body">

	<div class="form-group">
		<label>Rungtis</label>
		{{ form_widget(form.activity, {attr: {'class': 'form-control'}}) }}
	</div>
    {% if is_granted("ROLE_TEACHER") %}
        <div class="form-group">
            <label>Mokinys</label>
            {{ form_widget(form.studentInfo, {attr: {'class': 'form-control'}}) }}
        </div>
    {% endif %}
	<div class="form-group">
		<label>Rezultatas</label>
		{{ form_widget(form.value, {attr: {'class': 'form-control'}}) }}
	</div>
	<div class="form-group">
		<label>Data</label>
		<div class="input-group date">
			<div class="input-group-addon">
				<i class="fa fa-calendar"></i>
			</div>
			{{ form_widget(form.timestamp.date, {attr: {'class': 'form-control pull-right datepicker'}}) }}
		</div>
	</div>
	<div class="bootstrap-timepicker">
		<div class="form-group">
			<label>Laikas</label>
			<div class="input-group">
				{{ form_widget(form.timestamp.time, {attr: {'class': 'form-control timepicker'}}) }}
				<div class="input-group-addon">
					<i class="fa fa-clock-o"></i>
				</div>
			</div>
		</div>
	</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Atšaukti</button>
	<button type="submit" class="btn btn-success">Išsaugoti pakeitimus</button>
</div>
{{ form_end(form) }}

<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker({
            autoclose: true,
            format: 'yyyy-mm-dd',
            language: 'lt'
        });

        $('.timepicker').timepicker({
            showInputs: false,
            minuteStep: 5,
            showSeconds: false,
            showMeridian: false,
            defaultTime: '08:00'
        });
    });
</script>
