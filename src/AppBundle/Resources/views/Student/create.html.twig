{{ form_start(form) }}
{{ form_errors(form) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Mokinio pridėjimas</h4>
</div>
<div class="modal-body">

    <div class="nav-tabs-custom no-margin">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1" data-toggle="tab" aria-expanded="true">Vienas</a>
            </li>
            <li class="">
                <a href="#tab_2" data-toggle="tab" aria-expanded="false">Keli iš karto</a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="tab_1" class="tab-pane active">

                <div class="form-group">
                    <label>Vardas Pavardė</label>
                    {{ form_widget(form.name, {attr: {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Gimimo data</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        {{ form_widget(form.birthDate, {attr: {'class': 'form-control pull-right datepicker'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Klasė</label>
                    {{ form_widget(form.classInfo, {attr: {'class': 'form-control'}}) }}
                </div>

            </div>
            <div id="tab_2" class="tab-pane">

            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Atšaukti</button>
        <button type="submit" class="btn btn-success">Pridėti</button>
    </div>
    {{ form_end(form) }}

    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                autoclose: true,
                format: 'yyyy-mm-dd',
                language: 'lt'
            });

            $('.timepicker').timepicker({
                showInputs: false,
                minuteStep: 5,
                showSeconds: false,
                showMeridian: false,
                defaultTime: '08:00'
            });
        });
    </script>