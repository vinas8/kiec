<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ 'KKnyga' }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/adminlte.css') }}"/>
    {% endblock %}
    {% block canonical_meta %}{% endblock %}
</head>
<body class="skin-red">
    <div class="wrapper">
        {% block container %}

            {% block header %}
                <header class="main-header">
                    {% include "::inc/header.html.twig" %}
                </header>
            {% endblock %}

            {% block sidebar %}
                <aside class="main-sidebar sidebar-offcanvas">
                    {% include "::inc/sidebar.html.twig" %}
                </aside>
            {% endblock %}

            <div class="content-wrapper">
                <section class="content-header">
                    <h1>
                        {% block page_title %}Blank page{% endblock %}
                        <small>
                            {% block page_subtitle %}{% for flash_message in app.session.flashBag.get('notice') %}
                                <div class="flash-notice">
                                    {{ flash_message }}
                                </div>
                            {% endfor %}{% endblock %}
                        </small>
                    </h1>
                </section>
                <section class="content">
                    {% block page_content %}{% endblock %}
                </section>
            </div>

        {% endblock %}
    </div>

    {% block footer %}
        {% include "::inc/footer.html.twig" %}
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}

</body>
</html>
